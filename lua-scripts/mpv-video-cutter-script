if [ $# -eq 0 ]
  then
    echo "Usage:"
    echo "flatpak run --command=mpv-video-cutter-script io.mpv.Mpv install
;   # to install"
    echo "flatpak run --command=mpv-video-cutter-script io.mpv.Mpv uninstall; # to uninstall"
    exit
fi

if [ $1 == "install" ]; then
mkdir -p ~/.var/app/io.mpv.Mpv/config/mpv/scripts
cd ~/.var/app/io.mpv.Mpv/config/mpv/scripts
wget -c https://raw.githubusercontent.com/fastrizwaan/mpv-video-cutter-linux/master/flatpak/c_concat.sh
wget -c https://raw.githubusercontent.com/fastrizwaan/mpv-video-cutter-linux/master/flatpak/cutter.lua
chmod 0755 c_concat.sh
echo "mpv-video-cutter script Installed!"
fi


if [ $1 == "uninstall" ]; then
rm ~/.var/app/io.mpv.Mpv/config/mpv/scripts/c_concat.sh
rm ~/.var/app/io.mpv.Mpv/config/mpv/scripts/cutter.lua
echo "mpv-video-cutter script Uninstalled!"
fi
